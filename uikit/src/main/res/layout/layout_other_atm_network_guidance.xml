<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twelve_dp"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bank_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/eight_dp" />

        <com.midtrans.sdk.uikit.widgets.DefaultTextView
            android:id="@+id/bank_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/four_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/secondary_text_size" />

        <com.midtrans.sdk.uikit.widgets.FancyButton
            android:id="@+id/bank_toggle"
            style="@style/ButtonBankListExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/four_dp"
            android:drawablePadding="@dimen/two_dp"
            app:fb_iconPaddingRight="@dimen/four_dp"
            app:fb_iconResource="@drawable/ic_view"/>
    </LinearLayout>

    <com.midtrans.sdk.uikit.widgets.DefaultTextView
        android:id="@+id/card_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginRight="@dimen/twelve_dp"
        android:drawablePadding="@dimen/twenty_dp"
        android:textColor="@color/black" />
</LinearLayout>