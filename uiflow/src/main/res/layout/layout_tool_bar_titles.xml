<?xml version="1.0" encoding="utf-8"?>
<id.co.veritrans.sdk.uiflow.widgets.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title -->
    <id.co.veritrans.sdk.coreflow.widgets.DefaultTextView
        android:id="@+id/header_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/header_text_size"/>

    <!-- Subtitle -->
    <id.co.veritrans.sdk.coreflow.widgets.DefaultTextView
        android:id="@+id/header_view_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/faint_white"
        android:textSize="@dimen/secondary_text_size" />

</id.co.veritrans.sdk.uiflow.widgets.HeaderView>